# ── Kalshi ────────────────────────────────────────────────────────────────────
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_API_SECRET=your_kalshi_api_secret_here
KALSHI_ENV=prod   # prod | demo

# ── Polymarket ────────────────────────────────────────────────────────────────
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_API_SECRET=your_polymarket_api_secret_here
POLYMARKET_API_PASSPHRASE=your_polymarket_passphrase_here
POLYMARKET_PRIVATE_KEY=your_polygon_wallet_private_key_here
POLYMARKET_FUNDER_ADDRESS=your_polygon_wallet_address_here

# ── ECMWF (optional – open data requires no key, commercial needs one) ────────
ECMWF_API_KEY=
ECMWF_API_URL=https://api.ecmwf.int/v1

# ── Bot settings ──────────────────────────────────────────────────────────────
# Minimum edge (decimal) required to consider a trade
MIN_EDGE_THRESHOLD=0.05
# Kelly fraction multiplier (0.25 = quarter-Kelly)
KELLY_FRACTION=0.25
# Maximum single-position size as fraction of bankroll
MAX_POSITION_FRACTION=0.08
# Maximum total weather exposure as fraction of bankroll
MAX_TOTAL_EXPOSURE=0.25
# Starting bankroll in USD
BANKROLL_USD=1000.0
# Loop interval in seconds
POLL_INTERVAL_SECONDS=300
# Enable dry-run (no real orders placed)
DRY_RUN=true
